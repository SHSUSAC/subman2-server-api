{
  "name": "@shsusac/subman2-server-api",
  "author": "Vespion Softworks",
  "license": "AGPL-3.0-only",
  "engines": {
    "node": "14"
  },
  "private": true,
  "main": "lib/index.js",
  "packageManager": "yarn@3.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/SHSUSAC/subman2-server-api.git"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "serve": "yarn run build && firebase emulators:start",
    "shell": "yarn run build && firebase functions:shell",
    "start": "yarn run shell",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "9.8.0",
    "firebase-functions": "3.14.1",
    "zod": "3.11.6"
  },
  "devDependencies": {
    "@firebase/app-types": "0.7.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "8.0.3",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@shsusac/subman2-common-api": "1.1.0",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.8.0",
    "eslint": "7.6.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-import": "2.22.0",
    "fast-check": "2.21.0",
    "firebase-functions-test": "0.2.0",
    "firebase-tools": "10.1.4",
    "jest": "27.5.1",
    "semantic-release": "19.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5",
    "zod-fast-check": "0.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/tests/*.+(ts|tsx|js)",
      "**/tests/**/*.+(ts|tsx|js)"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "# Semantic Versioning Changelog"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "yarn.lock"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": []
        }
      ]
    ]
  }
}
